<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beside.whatmeal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WhatMeal"
        android:allowBackup="false">
        <activity
            android:name=".presentation.map.MapActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.foodlist.view.FoodListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.view.MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.survey.view.SurveyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.tutorial.view.TutorialActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WhatMeal.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>