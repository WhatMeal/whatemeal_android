<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WhatMeal.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenBackground">@color/bg0</item>

        <item name="android:statusBarColor">@color/bg0</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@color/bg100</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.WhatMeal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/bg0</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@color/bg100</item>
    </style>
</resources>